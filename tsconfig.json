{
    "compilerOptions": {

        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        // "module": "commonjs",
        "target": "esnext",
        "jsx": "react",
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
          ],
          "types":[
            
        ],

          "allowJs": true,
          "skipLibCheck": true,
          "esModuleInterop": true,
          "allowSyntheticDefaultImports": true,
          "strict": true,
          "forceConsistentCasingInFileNames": true,
          "module": "esnext",
          "moduleResolution": "node",
          "resolveJsonModule": true,
          "isolatedModules": true,
          "noEmit": true
    },
    "awesomeTypescriptLoaderOptions": {
        "useWebpackText": true,
        "useTranspileModule": true,
        "doTypeCheck": true,
        "forkChecker": true
        },
    
    "include": [
        "/assets/src/"
        // "**/*"
    ],
    "exclude":[
        "/assets/dist/"
    ],
    
}